---
import Badge from './Badge.astro';

// interface Props {
//   project: string;
//   source: string;
//   description: string;
// }

const { project } = Astro.props;
---

<div
  class="h-auto flex flex-col justify-between border border-neutral-700 bg-background-tertiary hover:scale-105 ease-out transition-transform p-4 rounded-xl"
>
  <div class="flex flex-col space-y-2">
    <h2 class="text-xl font-medium text-purple-100">{project.title}</h2>
    <p class="text-(sm neutral-200)">{project.description}</p>
  </div>

  <div class="flex space-x-4 mt-4">
    {project.source && <Badge link={project.source}>Source</Badge>}
    {project.demo && <Badge link={project.demo}>Demo</Badge>}
    {project.article && <Badge link={project.article}>Article</Badge>}
  </div>
</div>
