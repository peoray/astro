---
import Badge from './Badge.astro'

// interface Props {
//   event: string;
//   source: string;
//   description: string;
// }

const { event } = Astro.props
---

<div
  class="h-auto flex flex-col justify-between border border-neutral-700 bg-background-tertiary hover:scale-105 ease-out transition-transform p-4 rounded-xl"
>
  <div class="flex flex-col space-y-2">
    <h4 class="text-sm text-purple-100">{event.name}</h4>
    <h2 class="text-xl font-medium text-white">{event.topic}</h2>
    <p class="text-(lg neutral-200)">{event.description}</p>
  </div>

  <div class="flex space-x-4 mt-4">
    {
      event.slide && (
        <Badge classes="bg-transparent border" link={event.slide}>
          Slide
        </Badge>
      )
    }
    {
      event.video && (
        <Badge classes="bg-transparent border" link={event.video}>
          Video
        </Badge>
      )
    }
    <!-- {
      event.article && (
        <Badge classes="bg-transparent border" link={event.article}>
          Article
        </Badge>
      )
    } -->
  </div>
</div>
