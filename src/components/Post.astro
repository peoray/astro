---
import { formatDate } from '../utils/helpers';

const { post } = Astro.props;
---

<div class="post mb-6">
  <span class="opacity-75">
    <span>{formatDate(post.date)}</span>
  </span>

  <h2 class="text-2xl font-bold">
    <a href={`${post.path}`} class="text-copy-primary">
      {post.title}
    </a>
  </h2>
</div>
