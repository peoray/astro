---
import MainLayout from './MainLayout.astro';

import Newsletter from '../components/Newsletter.astro';
import Bio from '../components/Bio.astro';
// import SocialShare from '../components/SocialShare.astro';
// import Suggested from '../components/Suggested.astro';

import readingTime from 'reading-time';

// import { config } from '../data/siteConfig';
import { editOnGithub, formatDate, kebabCaseStr } from '../utils/helpers';

import '../styles/github-markdown.css';

const { content } = Astro.props;
// console.log(content.astro.source);
const stats = readingTime(content.astro.source);

let { title, description, date, tags, lastmod, slug } = content;

const githubLink = editOnGithub(slug);

// console.log(title);
// console.log(stats);
---

<MainLayout title="Blog">
  <div class="mx-auto my-16 container-inner">
    <h1 class="text-4xl font-bold leading-tight">{title}</h1>
    <div class="mt-2 text-gray-600">
      {
        !lastmod ? (
          <span>{formatDate(date)}</span>
        ) : (
          <span>Last Updated on {formatDate(lastmod)}</span>
        )
      }

      <span class="mx-2"> &middot;</span>
      <span>
        {/* <span class='align-middle' role='img'  aria-label='popcorn'> */}
        <span class="align-middle" role="img" aria-label="clock">
          {/* üçø */}
          üïí
        </span>
        <span class="ml-1 text-md">{stats.text}</span>
      </span>
    </div>

    <div class="flex flex-wrap mt-4 text-sm">
      {
        tags.map((tag: string) => (
          <a
            href={`/tag/${kebabCaseStr(tag)}`}
            class="inline-block px-4 py-2 mb-4 mr-4 bg-gray-300 rounded-full lg:mb-0 hover:bg-green-300"
          >
            {tag}
          </a>
        ))
      }
    </div>

    <div class="mt-12 markdown-body">
      <slot />
    </div>

    {/* <hr /> */}

    <div class="text-3xl tracking-widest text-center md:text-5xl">
      <span>.</span>
      <span>.</span>
      <span>.</span>
    </div>

    <div class="mt-5 mb-8">
      <p>
        If you find any error or typo in this article, please feel free to{' '}
        <a
          href={githubLink}
          class="font-bold"
          target="_blank"
          rel="nofollow noopener noreferrer"
        >
          edit on Github
        </a>
        .
      </p>

      <div class="mt-6">
        <p>
          If this was helpful, interesting, or caused some other positive
          emotion, please share!
        </p>
        <!-- <SocialShare postPath={post.path} postNode={postNode} /> -->
        <!-- <SocialShare postPath={post.path} /> -->
      </div>
    </div>

    <!-- <Suggested previous={post.slug} next={post.slug} /> -->
  </div>

  <div class="py-4 mx-auto container-inner">
    <hr class="" />
  </div>
  <Bio />
  <Newsletter />
</MainLayout>
