---
import Footer from '../components/Footer.astro';
import MetaTag from '../components/MetaTag.astro';
import Navbar from '../components/Navbar.astro';

import '../styles/global.css';
// interface Props {
//   title: string;
// }

const { title, description, image, data, robots } = Astro.props;
---

<html lang="en">
  <MetaTag {title} {description} {image} {data} {robots} />
  <body>
    <div
      class="content-wrapper bg-background-primary text-copy-primary leading-normal flex flex-col min-h-screen"
    >
      <Navbar />
      <main class="flex-grow mt-10">
        <slot />
      </main>

      <Footer />
    </div>
  </body>
</html>
