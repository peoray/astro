---
import readingTime from 'reading-time';

import MainLayout from '../../layouts/MainLayout.astro';
import Post from '../../components/Post.astro';

import { getCollection, CollectionEntry } from 'astro:content';

import { formatBlogPosts, kebabCaseStr } from '../../utils/helpers';
import type { PostFrontMatter, MyPostInstance } from '../../utils/types';
import config from '../../data/site-config';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  const formattedPosts = formatBlogPosts(posts);

  const uniqueTags = [
    ...new Set(
      formattedPosts
        .map((post: { data: { tags: any } }) => post.data.tags)
        .flat()
    ),
  ];

  return uniqueTags.map((tag) => {
    const filteredPosts = formattedPosts.filter(
      (post: { data: { tags: unknown[] } }) => post.data.tags.includes(tag)
    );
    return {
      params: { tag: kebabCaseStr(tag) },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;

// get reading time of each post
posts.map((post: { data?: any; body?: any }) => {
  const time = readingTime(post.body).text;
  post.data.readTime = time;
  return post;
});

